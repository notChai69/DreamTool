{
    "manifest_version": 3,
    "name": "DreamTool",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "scripting",
        "storage",
        "tabs"
    ],
    "icons": {
        "16": "icons/16.png",
        "32": "icons/32.png",
        "64": "icons/64.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_icon": {
            "16": "icons/16.png",
            "32": "icons/32.png",
            "64": "icons/64.png",
            "128": "icons/128.png"
        },
        "default_popup": "popup.html"
    },
    "background": {
        "service_worker": "background.js"
    }
}